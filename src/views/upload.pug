extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
            label(for="video")
            input(type="file", accept="vidoe/*", required, id="vidoe", name="video") 
            input(name="title", type="text", placeholder="Title", required, maxlength=80)
            input(name="description", type="text", placeholder="Description", required, minlength=5)
            input(name="hashtags", type="text", placeholder="Hashtags, separated by comma", required)
            input(type="submit", value="Upload Video")